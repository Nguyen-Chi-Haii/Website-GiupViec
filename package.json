{
  "name": "giupviec-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Giúp Việc Nhà - Monorepo với Backend (.NET) và Frontend (Angular)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"API,WEB\" --prefix-colors \"blue,green\" \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && dotnet watch run",
    "dev:web": "cd apps/web && npm run start",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && dotnet build -c Release",
    "build:web": "cd apps/web && npm run build",
    "install:web": "cd apps/web && npm install",
    "clean": "rimraf apps/web/node_modules apps/web/dist packages/shared/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
